# Supabase Configuration
# Get these from your Supabase project dashboard: Settings > API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (for Edge Functions)
# IMPORTANT: Never expose this in client-side code or commit to Git
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps > Web app
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-app.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Cloud Messaging VAPID Key
# Get this from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# Firebase Server Key (for Edge Functions)
# Get this from Firebase Console > Project Settings > Cloud Messaging > Server key
# IMPORTANT: This should only be used in secure server-side code (Edge Functions)
FIREBASE_SERVER_KEY=your-firebase-server-key

# Application Configuration
VITE_APP_URL=http://localhost:8080
VITE_APP_NAME=Newsleak

# Optional: Analytics
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Optional: CDN Configuration
# VITE_CDN_URL=https://cdn.newsleak.com

# Optional: Feature Flags
# VITE_ENABLE_COMMENTS=true
# VITE_ENABLE_PUSH_NOTIFICATIONS=true
# VITE_ENABLE_ANALYTICS=true
